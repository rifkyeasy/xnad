# ============================================
# xnad - Social AI Trading Agent
# ============================================

# Node Environment
NODE_ENV=development

# ============ Blockchain ============
# Monad RPC URL (mainnet)
RPC_URL=https://monad-mainnet.drpc.org

# Agent wallet private key (with 0x prefix)
PRIVATE_KEY=0x_your_private_key_here

# Deployer private key for contracts (with 0x prefix)
DEPLOYER_PRIVATE_KEY=0x_your_deployer_private_key_here

# Deployed contract addresses (update after deployment)
VAULT_FACTORY_ADDRESS=
NEXT_PUBLIC_VAULT_FACTORY_ADDRESS=

# ============ Database (NeonDB) ============
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/xnad?sslmode=require

# ============ Backend ============
PORT=3001
BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# ============ AI ============
OPENAI_API_KEY=sk-your_openai_key_here

# ============ X/Twitter API ============
# RapidAPI key for Twitter API (twitter241)
X_RAPIDAPI_API_KEY=your_rapidapi_key_here

# ============ nad.fun API ============
NADFUN_API_URL=https://api.nad.fun
NADFUN_API_KEY=

# ============ Feature Flags ============
# Enable actual trading (false = simulation only)
ENABLE_TRADING=false

# Dry run mode (no actual transactions)
DRY_RUN=true

# ============ Logging ============
LOG_LEVEL=info
