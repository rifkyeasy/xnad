# ============================================
# xnad - Social AI Trading Agent (Testnet)
# ============================================

# Node Environment
NODE_ENV=development

# ============ Blockchain ============
# Monad Testnet RPC URL
RPC_URL=https://testnet-rpc.monad.xyz

# Agent wallet private key (with 0x prefix)
PRIVATE_KEY=0x_your_private_key_here

# Deployer private key for contracts (with 0x prefix)
DEPLOYER_PRIVATE_KEY=0x_your_deployer_private_key_here

# Deployed contract addresses (update after deployment)
VAULT_FACTORY_ADDRESS=
NEXT_PUBLIC_VAULT_FACTORY_ADDRESS=

# Mock Router for testnet (AMM bonding curve with volatility)
MOCK_ROUTER_ADDRESS=0xE3965709c657748501bB33a55AEFdE7F9622FD5E

# ============ Database (NeonDB) ============
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/xnad?sslmode=require

# ============ Backend ============
PORT=3001
BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# ============ AI ============
OPENAI_API_KEY=sk-your_openai_key_here

# ============ X/Twitter API ============
# RapidAPI key for Twitter API (twitter241)
X_RAPIDAPI_API_KEY=your_rapidapi_key_here

# ============ nad.fun API ============
NADFUN_API_URL=https://testnet-api.nad.fun
NADFUN_API_KEY=

# ============ Mock Mode (Testnet) ============
# Use mock tokens instead of real X analysis
USE_MOCK_DATA=true

# Deployed Mock Token Addresses (Monad Testnet)
# MONAD: 0x700d18196d14244FcD7e9D87d5bBF5DE3c33B0e8
# NADS:  0xCaBFa324576c655D0276647A7f0aF5e779123e0B
# DEGEN: 0x8E304Ae201FF805eeEaa629b069289b94376F52F
# PURP:  0x9dAf66b75d348D4f90B125a282bBFA608Ecec13C
# CHAD:  0xA8adEFE2C8f0F71a585a73c1259997f593F9e463

# ============ Feature Flags ============
# Enable actual trading (false = simulation only)
ENABLE_TRADING=true

# Dry run mode (no actual transactions)
DRY_RUN=false

# ============ Logging ============
LOG_LEVEL=info
